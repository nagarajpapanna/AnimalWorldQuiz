                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/cDescriptionHorses"
                        android:cropToPadding="true"
                        android:src="@drawable/horse" />

                    <TextView
                        android:id="@+id/horsesCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/cardTitleBackground"
                        android:padding="@dimen/cardTitleFontPadding"
                        android:text="@string/horseCardTitle"
                        android:textColor="@color/cardTitleFontColor"
                        android:textSize="@dimen/cardTitleFontSize" />

                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/horsesButtonQestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/paddingCardText">

                    <RadioButton
                        android:id="@+id/horsesBones175"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/horseBones_Opt1" />

                    <RadioButton
                        android:id="@+id/horsesBones210"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/horseBones_Opt2" />

                    <RadioButton
                        android:id="@+id/horsesBones205"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/horseBones_Opt3" />

                    <RadioButton
                        android:id="@+id/horsesBones267"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/horseBones_Opt4" />


                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Quiz Question Three on Dog Options with Check Box-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dogCard_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/dogImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/cDescriptionDog"
                        android:cropToPadding="true"
                        android:src="@drawable/dog" />

                    <TextView
                        android:id="@+id/dogCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/cardTitleBackground"
                        android:padding="@dimen/cardTitleFontPadding"
                        android:text="@string/dogCardTitle"
                        android:textColor="@color/cardTitleFontColor"
                        android:textSize="@dimen/cardTitleFontSize" />

                </RelativeLayout>


                <!-- This Below linear Layout is for Check Box Options  -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/paddingCardText">


                    <CheckBox
                        android:id="@+id/dogCheckBoxLoving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogFacts_Opt1" />

                    <CheckBox
                        android:id="@+id/dogCheckBoxCaring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogFacts_Opt2" />

                    <CheckBox
                        android:id="@+id/dogCheckBoxHate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogFacts_Opt3" />

                    <CheckBox
                        android:id="@+id/dogCheckBoxProtecting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dogFacts_Opt4" />


                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Quiz Question Four on Flamingo Options with Check Box-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flamingoCard_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/flamingoImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/cDescriptionCat"
                        android:cropToPadding="true"
                        android:src="@drawable/flamingo" />

                    <TextView
                        android:id="@+id/flamingoCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/cardTitleBackground"
                        android:padding="@dimen/cardTitleFontPadding"
                        android:text="@string/flamingoCardTitle"
                        android:textColor="@color/cardTitleFontColor"
                        android:textSize="@dimen/cardTitleFontSize" />

                </RelativeLayout>

                <!-- CheckBox Options for Flamingo Start -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/paddingCardText">


                    <CheckBox
                        android:id="@+id/flamingoIndia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/flamingoFacts_Opt1" />

                    <CheckBox
                        android:id="@+id/flamingoJapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/flamingoFacts_Opt2" />

                    <CheckBox
                        android:id="@+id/flamingoSouthAfrica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/flamingoFacts_Opt3" />

                    <CheckBox
                        android:id="@+id/flamingoSrilanka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/flamingoFacts_Opt4" />

                </LinearLayout>
                <!-- CheckBox Options for Flamingo Ends Here -->

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Quiz Question Five on Gorilla Options with Answer Input Type Option-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gorillaCard_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/gorillaImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/cDescriptionGorilla"
                        android:cropToPadding="true"
                        android:src="@drawable/gorilla" />

                    <TextView
                        android:id="@+id/gorillaCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/cardTitleBackground"
                        android:padding="@dimen/cardTitleFontPadding"
                        android:text="@string/gorillaCardTitle"
                        android:textColor="@color/cardTitleFontColor"
                        android:textSize="@dimen/cardTitleFontSize" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/gorillaAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gorillaEdittextAnswer_topMargin"
                        android:fontFamily="@string/Roboto"
                        android:hint="@string/gorillaAnswer"
                        android:inputType="textCapSentences" />

                    <!-- Given hints for Gorilla Wieght -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/gorillaGivenHintOptionsTitle_leftMargin"
                        android:layout_marginTop="@dimen/gorillaEdittextAnswer_topMargin"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/gorillaGivenHintOptionsTitle"
                        android:textStyle="bold" />

                    <!-- First Column and Second Column -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gorillaHintOptions1and2_topMargin"
                        android:fontFamily="@string/Roboto"
                        android:gravity="center"
                        android:text="@string/gorillaGivenHintOption_1and2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/gorillaHintOptions_BelowLine"
                        android:fontFamily="@string/Roboto"
                        android:gravity="center"
                        android:text="@string/gorillaGivenHintOption_3and4" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Quiz Question SIX on Meerkat Options with Answer Type Option-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/meerkatCard_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/meerkatImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/cDescriptionMeerkat"
