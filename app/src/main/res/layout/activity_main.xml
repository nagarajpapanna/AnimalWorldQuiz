                        android:fontFamily="@string/Roboto"
                        android:hint="@string/gorillaAnswer"
                        android:inputType="textCapSentences" />

                    <!-- Given hints for Meerkat Nick Names -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/meerkatGivenHintOptionsTitle_leftMargin"
                        android:layout_marginTop="@dimen/meerkatEdittextAnswer_topMargin"
                        android:fontFamily="@string/Roboto"
                        android:text="@string/meerkatGivenHintOptionsTitle"
                        android:textStyle="bold" />

                    <!-- First Column and Second Column -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/meerkatHintOptions1and2_topMargin"
                        android:fontFamily="@string/Roboto"
                        android:gravity="center"
                        android:text="@string/meerkatGivenHintOption_1and2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/meerkatHintOptions_BelowLine"
                        android:fontFamily="@string/Roboto"
                        android:gravity="center"
                        android:text="@string/meerkatGivenHintOption_3and4" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!-- Message Display Card-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/thankYouMessageCard_view"
            android:layout_width="@dimen/card_view_width"
            android:layout_height="@dimen/card_view_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/endCardBackground"
            card_view:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleThankYouCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thankTitleTopMargin"
                    android:gravity="center"
                    android:text="@string/thankYouTitle"
                    android:textAllCaps="true"
                    android:textColor="@color/cardTitleFontColor"
                    android:textSize="@dimen/thankTitleFontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subTitleThankYouCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/thankYouSubTitle"
                    android:textAllCaps="true"
                    android:textColor="@color/thankYouCardSubTitle"
                    android:textSize="@dimen/thankSubTitleFontSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thankYouParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thankParagraphTopMargin"
                    android:paddingEnd="@dimen/thankParagraphPaddingRight"
                    android:paddingStart="@dimen/thankParagraphPaddingLeft"
                    android:text="@string/thankYouParagraph"
                    android:textColor="@color/thankYouCardFonts"
                    android:textSize="@dimen/thankParagraphFontSize" />

                <TextView
                    android:id="@+id/endThankYou"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/thankYouTopMargin"
                    android:gravity="end"
                    android:paddingEnd="@dimen/thankParagraphPaddingRight"
                    android:paddingStart="@dimen/thankParagraphPaddingLeft"
                    android:text="@string/ThankYou"
                    android:textColor="@color/thankYouCardFonts"
                    android:textSize="@dimen/thankParagraphFontSize" />

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/Roboto"
                    android:paddingEnd="@dimen/thankParagraphPaddingRight"
                    android:paddingStart="@dimen/thankParagraphPaddingLeft"
                    android:text="@string/signature"
                    android:textSize="@dimen/signatureFontSize" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


        <!-- Submit Button and Reset Button Options End of the Quiz-->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/subandresCard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/card_view_topMargin"
            card_view:cardBackgroundColor="@color/endCardBackground"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="submitQuiz"
                    android:text="@string/submitButton"
                    android:textColor="@color/cardTitleFontColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/resetButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="reset"
                    android:text="@string/resetButton"
                    android:textColor="@color/cardTitleFontColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</ScrollView>